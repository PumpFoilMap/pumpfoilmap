{
  "version": 8,
  "name": "roads-cities",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://api.maptiler.com/tiles/v3/tiles.json?key={{MAPTILER_KEY}}"
    }
  },
  "glyphs": "https://api.maptiler.com/fonts/{fontstack}/{range}.pbf?key={{MAPTILER_KEY}}",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f9fb"
      }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "paint": {
        "fill-color": [
          "match",
          [
            "get",
            "class"
          ],
          "forest",
          "#d6ead3",
          "wood",
          "#d6ead3",
          "grass",
          "#e6f5d0",
          "meadow",
          "#e6f5d0",
          "scrub",
          "#e2efd8",
          "farmland",
          "#f5f1d0",
          "residential",
          "#f0efe9",
          "industrial",
          "#eceae6",
          "commercial",
          "#eceae6",
          "park",
          "#d9f2d6",
          "#eeeeee"
        ],
        "fill-opacity": 0.6
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "paint": {
        "fill-color": [
          "match",
          [
            "get",
            "class"
          ],
          "forest",
          "#d6ead3",
          "grass",
          "#e6f5d0",
          "meadow",
          "#e6f5d0",
          "farmland",
          "#f5f1d0",
          "residential",
          "#f0efe9",
          "industrial",
          "#eceae6",
          "commercial",
          "#eceae6",
          "park",
          "#d9f2d6",
          "#eeeeee"
        ],
        "fill-opacity": 0.55
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#d2e7f7"
      }
    },
    {
      "id": "buildings-fill",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 12,
      "paint": {
        "fill-color": "#eae7e2",
        "fill-opacity": 0.75
      }
    },
    {
      "id": "buildings-outline",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 13,
      "layout": {
        "line-join": "round"
      },
      "paint": {
        "line-color": "#d0cdc8",
        "line-width": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          13,
          0.4,
          16,
          0.8
        ],
        "line-opacity": 0.85
      }
    },
    {
      "id": "country-boundaries",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": [
        "all",
        [
          "==",
          "admin_level",
          2
        ],
        [
          "==",
          "maritime",
          0
        ]
      ],
      "paint": {
        "line-color": "#9e9e9e",
        "line-width": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          0,
          0.3,
          4,
          0.5,
          6,
          0.8,
          8,
          1.2
        ],
        "line-opacity": 0.9
      }
    },
    {
      "id": "major-roads-casing",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "in",
        "class",
        "motorway",
        "trunk",
        "primary"
      ],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ffffff",
        "line-width": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          3,
          1.2,
          5,
          2.2,
          8,
          4.2,
          12,
          7
        ],
        "line-opacity": 0.9
      }
    },
    {
      "id": "major-roads",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "in",
        "class",
        "motorway",
        "trunk",
        "primary"
      ],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ff7f2a",
        "line-width": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          3,
          0.6,
          5,
          1.2,
          8,
          2.4,
          12,
          4.5
        ],
        "line-opacity": 0.95
      }
    },
    {
      "id": "secondary-tertiary-roads-casing",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "in",
        "class",
        "secondary",
        "tertiary",
        "residential",
        "service"
      ],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ffffff",
        "line-width": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          5,
          0.8,
          8,
          1.4,
          12,
          2.6
        ],
        "line-opacity": 0.85
      }
    },
    {
      "id": "secondary-tertiary-roads",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "in",
        "class",
        "secondary",
        "tertiary",
        "residential",
        "service",
        "living_street"
      ],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ffb347",
        "line-width": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          5,
          0.4,
          8,
          0.9,
          12,
          1.8
        ],
        "line-opacity": 0.9
      }
    },
    {
      "id": "road-labels-major",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "filter": [
        "in",
        "class",
        "motorway",
        "trunk",
        "primary"
      ],
      "layout": {
        "symbol-placement": "line",
        "text-field": [
          "coalesce",
          [
            "get",
            "name:fr"
          ],
          [
            "get",
            "name:latin"
          ],
          [
            "get",
            "name"
          ]
        ],
        "text-font": [
          "Noto Sans Regular"
        ],
        "text-size": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          5,
          10,
          12,
          14,
          16,
          18
        ],
        "text-padding": 1,
        "text-max-angle": 60,
        "text-allow-overlap": true,
        "visibility": "visible"
      },
      "paint": {
        "text-color": "#444444",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.2,
        "text-halo-blur": 0.2
      }
    },
    {
      "id": "road-labels-minor",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "filter": [
        "!in",
        "class",
        "motorway",
        "trunk",
        "primary"
      ],
      "layout": {
        "symbol-placement": "line",
        "text-field": [
          "coalesce",
          [
            "get",
            "name:fr"
          ],
          [
            "get",
            "name:latin"
          ],
          [
            "get",
            "name"
          ]
        ],
        "text-font": [
          "Noto Sans Regular"
        ],
        "text-size": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          9,
          10,
          12,
          12,
          16,
          14
        ],
        "text-padding": 1,
        "text-max-angle": 60,
        "text-allow-overlap": true,
        "visibility": "visible"
      },
      "paint": {
        "text-color": "#555555",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.0,
        "text-halo-blur": 0.2
      }
    },
    {
      "id": "city-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": [
        "in",
        "class",
        "city",
        "town"
      ],
      "layout": {
        "text-field": [
          "get",
          "name"
        ],
        "text-font": [
          "Open Sans Regular"
        ],
        "text-size": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          2,
          9,
          5,
          13,
          10,
          20
        ],
        "text-anchor": "center",
        "text-padding": 2
      },
      "paint": {
        "text-color": "#222222",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.6,
        "text-halo-blur": 0.4
      }
    },
    {
      "id": "small-settlement-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": [
        "in",
        "class",
        "village",
        "suburb",
        "hamlet"
      ],
      "layout": {
        "text-field": [
          "get",
          "name"
        ],
        "text-font": [
          "Open Sans Regular"
        ],
        "text-size": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          4,
          8,
          8,
          11,
          12,
          14
        ],
        "text-anchor": "center",
        "text-padding": 2,
        "visibility": "visible"
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.2,
        "text-halo-blur": 0.3
      }
    },
    {
      "id": "debug-all-transport",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "paint": {
        "line-color": "#0066ff",
        "line-width": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          3,
          0.2,
          6,
          1,
          10,
          2.5,
          14,
          5
        ],
        "line-opacity": 0.25
      }
    }
  ]
}